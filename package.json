        "@kunlun-design/utils": "workspace:*",
        "@types/jest": "^29.4.0",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vitejs/plugin-vue-jsx": "^3.0.0",
        "@vitest/coverage-c8": "^0.28.3",
        "@vue/test-utils": "^2.2.8",
        "babel-jest": "^29.4.1",
