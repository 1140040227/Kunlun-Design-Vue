{
    "name": "kunlun-design",
    "private": false,
    "version": "0.0.2",
    "type": "commonjs",
    "author": "anixuil",
    "description": "Kunlun Design - A Vue.js 3 UI library",
    "keywords": [
        "Kunlun-Design",
        "Kunlun",
        "kunlun-design",
        "Kunlun Design",
        "kunlun-design-vue"
    ],
    "homepage": "https://github.com/1140040227/Kunlun-Design-Vue/tree/vitedev",
    "repository": {
        "type": "git",
        "url": "https://github.com/1140040227/Kunlun-Design-Vue.git"
    },
    "files": [
        "lib/*",
        "packages/*",
        "package.json"
    ],
    "main": "./lib/kunlun-design-vue.umd.js",
    "module": "./lib/kunlun-design-vue.mjs",
    "exports": {
        ".": {
            "import": "./lib/kunlun-design.mjs",
            "require": "./lib/kunlun-design.umd.js"
        },
        "./lib/style.css": "./lib/style.css"
    },
    "engines": {
        "node": ">=16.15.0"
    },
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "preview": "vite preview",
        "prettier": "prettier --write .",
        "lint": "eslint --ext .ts packages/**/*.ts",
        "lint:fix": "eslint --ext .ts packages/**/*.ts --fix"
    },
    "dependencies": {
        "sass": "^1.57.1",
        "unplugin-vue-macros": "^1.3.2",
        "vue": "^3.2.45"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@typescript-eslint/eslint-plugin": "^5.48.1",
        "@typescript-eslint/parser": "^5.48.1",
        "@vitejs/plugin-vue": "^4.0.0",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.9.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.2",
        "typescript": "^4.9.3",
        "vite": "^4.0.0",
        "vue-tsc": "^1.0.11"
    },
    "lint-staged": {
        "*.{js,jsx,vue,ts,tsx}": [
            "eslint --ext .ts packages/**/*.ts",
            "eslint --ext .ts packages/**/*.ts --fix"
        ]
    }
}
